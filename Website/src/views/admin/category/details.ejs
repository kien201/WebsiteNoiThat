<%- include('../../layouts/adminHeader') -%>
    <div class="px-5 py-3">
        <h4>Thông tin danh mục</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt> Tên danh mục </dt>
            <dd> <%= cateInfo.name %> </dd>
            <dt> Nhóm </dt>
            <dd> <%= cateInfo.categoryGroup?.name || '?' %> </dd>
            <dt> Ảnh </dt>
            <dd>
                <img src="/images/upload/<%= cateInfo.img || 'default-image.jpg' %>" alt="No Image" height="300">
            </dd>
        </dl>
        <p>
            <a class="btn btn-primary" href="/admin/category/edit/<%=cateInfo.id%>">Sửa</a>
            <a class="btn btn-secondary ms-2" href="/admin/category">Trở về</a>
        </p>
    </div>
<%- include('../../layouts/adminFooter') -%>
